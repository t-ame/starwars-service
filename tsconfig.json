{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/test/**/*"
  ]
}